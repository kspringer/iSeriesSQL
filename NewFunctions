SELECT 
RIGHT(G.GLACCOUNT,7) AS GL_BASE_DETAIL
,MONTHNAME(G.GLDATE) AS GLMONTH_NAME
,Insert('<b>&1</b>',4,2,'My Address') AS NEW_INSERT
,Left(RTrim(G.GLACCOUNT)||Repeat(X'00',30),30) AS REPEATING_TEXT
,Extract(Year From G.GLDATE) As GLDATE_YEAR
,DayName(G.GLDATE) AS DAY_NAME
,G.FUND_NUMBER
	, G.PROGRAM_NUMBER
	, G.BASE_DETAIL
	, G.GLACCOUNT
	, G.JOURNAL_TYPE
	, G.EMPLOYEE_NUMBER_SORT
	, G.PAY_PERIOD
	, G.PAY_PERIOD_NUMBER
	, G.POSITION_NUMBER
	, G.GLDATE
	, G.GLYEAR
	, G.GLMONTH
	, G.GLAMOUNT
FROM BIMSHRFLS.A_PCTTRAN_GLD AS G
WHERE G.GLYEAR = 2015
AND G.GLACCOUNT LIKE '1010.1710.5100.00'
